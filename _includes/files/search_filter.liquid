{% comment %}
File search filter
{% endcomment %}
<div id="file-filter" class="dropdown-menu shadow-lg ml-1 py-3">
    <div class="form-group row p-0 mx-0 mb-0">
        <label class="col-3 col-form-label">Scope</label>
        <div class="col-9">
            <input type="text" class="form-control form-control-sm" name="scope" value="{{ exchange.post.scope.value }}">
        </div>
    </div>
    <div class="form-group row p-0 mx-0 mb-0">
        <label class="col-3 col-form-label">Extension</label>
        <div class="col-9">
            <input type="text" class="form-control form-control-sm" name="extension" value="{{ exchange.post.extension.value }}">
        </div>
    </div>
    <div class="form-group row p-0 mx-0 mb-0">
        <div class="col-12">
            <div class="form-check form-check-inline">
                <label class="form-check-label mr-1">Subdirectories</label>
                <input name="sub" class="form-check-input" type="checkbox" {% if exchange.post.sub %}checked{% endif %}>
            </div>
        </div>
    </div>
    <!-- buttons -->
    <div class="form-group row p-0 mx-0 mb-0">
        <div class="d-flex justify-content-end col-12">
            <button id="reset-filter" type="reset" class="btn btn-sm btn-secondary mr-1">Reset</button>
            <button type="submit" class="btn btn-sm btn-primary">Search</button>
        </div>
    </div>
</div>