{% comment %}
File grid (for folders)
{% endcomment %}
{% assign template = "files/file-grid-single.liquid" %}

<!-- directories -->
{% for file in files %}
    {% if file.dir %}
        {% include {{ template }} %}
    {% endif %}
{% endfor %}
<!-- files -->
{% for file in files %}
    {% if file.dir == false %}
        {% include {{ template }} %}
    {% endif %}
{% endfor %}